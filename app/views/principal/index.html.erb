<h1>Avaliação da Acuidade Visual</h1>

<%= form_with url: calcular_path, method: :post do %>
  <div>
    <%= label_tag :olho_esquerdo, "Olho Esquerdo (ex: 6/60)" %>
    <%= text_field_tag :olho_esquerdo %>
  </div>
  <div>
    <%= label_tag :olho_direito, "Olho Direito (ex: 6/60)" %>
    <%= text_field_tag :olho_direito %>
  </div>
  <div>
    <%= submit_tag "Calcular" %>
  </div>
<% end %>
